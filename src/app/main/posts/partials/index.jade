#wrapper
  div(ng-include="'app/nav.html'")
  #page-wrapper
    .container-fluid
      h3 Posts page
      .row
        .col-md-12
          .post(ng-repeat='post in posts track by $index')
            h4 {{post.title.rendered}}
              span.pull-right {{post.date}}
            p(ng-bind-html='post.excerpt.rendered | sanitize')
            .container-fluid
              a.btn.btn-info.pull-right(ng-href='/posts/{{post.id}}') Read more
              a.btn.btn-success.pull-right(ng-href='/posts/{{post.id}}/edit') Edit
